<?xml version="1.0" encoding="utf-8"?>
<!-- Professional Issue Card with Severity Badge -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardIssue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Icon + Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Category Icon -->
            <TextView
                android:id="@+id/tvCategoryIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="ðŸ”´"
                android:textSize="24sp"
                android:gravity="center"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Severity Badge -->
            <TextView
                android:id="@+id/tvSeverityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/badge_high"
                android:background="@drawable/bg_badge_high"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <!-- Issue Title -->
        <TextView
            android:id="@+id/tvIssueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broken Links"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_premium_primary"
            android:layout_marginBottom="6dp"/>

        <!-- Issue Description -->
        <TextView
            android:id="@+id/tvIssueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some links are broken and redirecting to 404 error pages"
            android:textSize="14sp"
            android:textColor="@color/text_premium_secondary"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Footer Row: Category + Pages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Category Label -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š SEO"
                android:textSize="12sp"
                android:textColor="@color/text_premium_tertiary"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Affected Pages Count -->
            <TextView
                android:id="@+id/tvAffectedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 pages affected"
                android:textSize="12sp"
                android:textColor="@color/text_premium_tertiary"
                android:textStyle="bold"/>

            <!-- Arrow Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_more"
                android:tint="@color/text_premium_tertiary"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
