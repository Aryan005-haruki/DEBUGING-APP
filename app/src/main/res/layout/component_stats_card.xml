<?xml version="1.0" encoding="utf-8"?>
<!-- Stats Card - Shows category statistics -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon/Emoji -->
        <TextView
            android:id="@+id/tvStatIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ“Š"
            android:textSize="24sp"
            android:gravity="center"/>

        <!-- Stat Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvStatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Performance"
                android:textSize="14sp"
                android:textColor="@color/text_premium_secondary"/>

            <TextView
                android:id="@+id/tvStatValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85/100"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_premium_primary"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Badge or Arrow -->
        <TextView
            android:id="@+id/tvStatBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/vibrant_success"
            android:padding="6dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
